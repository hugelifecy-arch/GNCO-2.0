# ── Authentication (Clerk) ──────────────────────────────────────
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_key_here
CLERK_SECRET_KEY=sk_live_your_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/architect

# ── Database (PostgreSQL via Supabase or Neon) ──────────────────
DATABASE_URL=postgresql://user:password@host:5432/gnco_db

# ── File Storage (AWS S3) ───────────────────────────────────────
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=gnco-documents

# ── Email (for access request notifications) ────────────────────
RESEND_API_KEY=re_your_key_here
NOTIFICATION_EMAIL=admin@gnco.io

# ── App Config ──────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://app.gnco.io
NEXT_PUBLIC_APP_ENV=development
